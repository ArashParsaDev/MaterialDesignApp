<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color_wallpaper"
    android:layoutDirection="rtl">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:id="@+id/lottie_wallpaper"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_wallpaper"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="میتونی هر روز عکسای جدید رو پیدا و دانلود کنی"
        android:gravity="center"
        android:layout_below="@id/lottie_wallpaper"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="4dp"
        android:id="@+id/tv_item_wallpaper_desc"
/>
</RelativeLayout>