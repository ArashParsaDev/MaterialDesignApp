<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".part4.DetailsWallpaperActivity"
    android:background="@color/background_color_wallpaper">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_detailWallpaper"
        android:scaleType="centerCrop"
        />


    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:fab_label="دانلود تصویر"
            android:src="@drawable/ic_baseline_image_24"
            app:fab_colorPressed="@color/background_color_card_food"
            />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:fab_label="تنظیم به عنوان پس زمینه"
            android:src="@drawable/ic_baseline_image_24"
            app:fab_colorPressed="@color/background_color_card_food"
            />



    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>