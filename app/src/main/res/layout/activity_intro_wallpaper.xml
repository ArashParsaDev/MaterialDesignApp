<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".part4.IntroWallpaperActivity"
    android:background="@color/background_color_wallpaper"
    android:layoutDirection="rtl">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewPager_Wallpaper"
        />


    <com.google.android.material.tabs.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        app:tabMode="fixed"
        app:tabPadding="4dp"
        app:tabGravity="fill"
        android:id="@+id/tablayout_wallpaper"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        app:tabBackground="@drawable/tabs_background_wallpaper"
        app:tabIndicatorHeight="0dp"
        android:background="@color/background_color_wallpaper"
        android:layoutDirection="ltr"
        />

    <TextView
        android:id="@+id/tv_intro_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بعدی"
        android:textColor="@color/textcolor_wallpaper"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        />
    <TextView
        android:id="@+id/tv_intro_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="قبلی"
        android:textColor="@color/textcolor_wallpaper"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_alignParentLeft="true"
        android:visibility="gone"

        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_intro_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_btn_wallpaper1"
        app:cornerRadius="8dp"
        android:text="شروع کنید"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/textcolor_wallpaper"
        />






</RelativeLayout>