<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_alignParentRight="true"
    android:textDirection="rtl"
    android:layoutDirection="rtl">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_header_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/facebook"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        />

    <TextView
        android:id="@+id/header_name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_header_profile"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="arash parsa"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/header_number_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_name_profile"
        android:text="09123456789"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        />

    <View
        android:layout_below="@id/header_number_profile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="8dp"
        />



</RelativeLayout>